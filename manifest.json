{
    "manifest_version": 2,
    "name": "Pwd#",
    "version": "0.1",
    "description": "Pwdhash 1.7 for Chrome. Press ctrl+\\  to fill in password fields.",
    "icons": {
        "16": "ico/hash16.png",
        "48": "ico/hash48.png",
        "128": "ico/hash128.png"
    },
    "permissions": ["storage"],
    "content_scripts": [{
        "all_frames": true,
        "js": ["pwdhash.js"],
        "matches": [ "http://*/*", "https://*/*" ],
        "run_at": "document_start"
        }],
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_title": "Pwd#",
        "default_icon": "ico/hash16.png",
        "default_popup": "popup.html"
    }
}
